user www-data;
worker_processes {{ ansible_processor_count }};
pid /run/nginx.pid;

events {
	worker_connections 1024;
	use epoll;
	multi_accept on;
}
http {
	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 60;
	
	access_log /var/www/site/access.log;
	error_log /var/www/site/error.log;
server {
	listen {{ nginx_listen_port }} default_server;
	root /var/www/site;
	index index.html;
	server_name {{ a_record }};
}

server {
	listen {{ nginx_listen_port }};
	root /var/www/site1;
	index index.html;
	server_name {{ cname_record }};
}
}

